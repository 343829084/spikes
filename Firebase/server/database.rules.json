{
  "rules": {
    "channels": {
      "global": {
        ".read": "auth != null",
        "$message": {
          ".write": "!data.exists() && newData.exists()",
          ".validate": "newData.hasChildren(['author', 'body', 'timestamp'])",
          "author": {
            ".validate": "newData.hasChildren(['id', 'name', 'photoUrl'])",
            "id": {
              ".validate": "newData.val() === auth.uid",
            }
          }
        }
      }
    }
  }
}
