<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.novoda.spikes.screenorientationlock">

  <application
    android:allowBackup="false"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@android:style/Theme.Holo.Light">

    <activity
      android:name="com.novoda.spikes.screenorientationlock.PreLockingActivity"
      android:label="@string/activity_label_pre">
      <intent-filter android:label="@string/app_name">
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name="com.novoda.spikes.screenorientationlock.LockingActivity"
      android:label="@string/activity_label_locking" />

    <activity
      android:name="com.novoda.spikes.screenorientationlock.PostLockingActivity"
      android:label="@string/activity_label_post" />

  </application>

</manifest>
