<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Simon">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Simon.Green">
        <item name="android:background">@color/green</item>
    </style>

    <style name="Simon.Red">
        <item name="android:background">@color/red</item>
    </style>

    <style name="Simon.Blue">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Simon.Yellow">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="Simon.Green.Game">
        <item name="android:alpha">0.33</item>
    </style>

    <style name="Simon.Red.Game">
        <item name="android:alpha">0.33</item>
    </style>

    <style name="Simon.Blue.Game">
        <item name="android:alpha">0.33</item>
    </style>

    <style name="Simon.Yellow.Game">
        <item name="android:alpha">0.33</item>
    </style>

</resources>
